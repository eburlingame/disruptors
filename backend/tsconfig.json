{
  "compilerOptions": {
    "target": "es5",
    "lib": ["ES2019"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "*": ["*", "build/*"]
    }
  }
}
